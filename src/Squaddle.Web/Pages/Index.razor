@page "/"

<BSContainer>
    <BSRow>
        <BSCol MD=2></BSCol>
        <BSCol MD=4>
            <BSCard Color="Color.Light">
                <BSCard CardType="CardType.Header">Create a room</BSCard>
                <BSCard CardType="CardType.Body">
                    <BSCard CardType="CardType.Title">Create a new room</BSCard>
                    <BSCard CardType="CardType.Text">
                        Create a new Squaddle room and invite your team to an estimation, retrospective or healthcheck
                        <p>&nbsp;</p>
                        <BSButton Color="Color.Primary" IsBlock="true">Get started</BSButton>
                    </BSCard>
                </BSCard>
            </BSCard>
        </BSCol>
        <BSCol MD=4>
            <BSCard Color="Color.Light">
                <BSCard CardType="CardType.Header">Join a room</BSCard>
                <BSCard CardType="CardType.Body">
                    <BSCard CardType="CardType.Title">Join an existing room</BSCard>
                    <BSCard CardType="CardType.Text">
                        You can join an existing room by clicking the link in your e-mail or by entering the room code below!
                        <p>&nbsp;</p>
                        <BSBasicInput InputType="InputType.Text" PlaceHolder="Room code" Value="string.Empty" Id="roomCode"/>
                    </BSCard>
                </BSCard>
            </BSCard>
        </BSCol>
        <BSCol MD=2></BSCol>
    </BSRow>
</BSContainer>